<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd
		http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.0.xsd
        http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
        http://www.springframework.org/schema/aop 
        http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
		">
	 		
   	<!-- ${className} -->
   	<bean id="${proName}.${classNameLower}BaseDao"  class="base.oracle.${className}BaseDaoImpl"
   		parent="tea.baseDao"
   	/>
   	
   	<bean id="${proName}.${classNameLower}Dao"  class="oracle.${className}DaoImpl"
   		parent="${proName}.${classNameLower}BaseDao"
   	/>
   	
   	<!-- ${className} -->
   	<bean id="${proName}.${classNameLower}BaseSvc" class="base.impl.${className}BaseSvcImpl" 
		p:${classNameLower}Dao-ref="${proName}.${classNameLower}Dao"
	/>
	
	<bean id="${proName}.${classNameLower}Svc" class="impl.${className}SvcImpl" 
	parent="${proName}.${classNameLower}BaseSvc"
	/>
	
	<!-- ${className} -->
	<bean id="${proName}.${classNameLower}Sql"  class="oracle.impl.${className}SqlImpl"
   	/>

	<bean id="${proName}.${classNameLower}Dao" class="${basepackage}.service.dao.jdbc.${className}DaoImpl"
		  parent="mt.baseDao"
	/>

	<bean id="${proName}.${classNameLower}Svc" class="${basepackage}.service.${className}SvcImpl"
		  p:${classNameLower}Dao-ref="${proName}.${classNameLower}Dao"
	/>

	<bean id="${proName}.${classNameLower}Quartz" class="${basepackage}.quartz.${className}Quartz"
		  singleton="true" init-method="init">
		<property name="${classNameLower}Svc">
			<ref bean="${proName}.${classNameLower}Svc" />
		</property>
	</bean>

	<bean id="${proName}.${classNameLower}Task"
		  class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref bean="${proName}.${classNameLower}Quartz" />
		</property>
		<property name="targetMethod">
			<value>execute</value>
		</property>
	</bean>

	<bean id="${proName}.${classNameLower}DoTime" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail">
			<ref bean="${proName}.${classNameLower}Task" />
		</property>
		<property name="cronExpression">
			<value>${r'${'}${proName}.${classNameLower}_cron${r'}'}</value>
		</property>
	</bean>
	
</beans>

